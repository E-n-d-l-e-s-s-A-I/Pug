mixin createMenu(menu, active)
	each value, key in menu
		if active == key
			a.active(href= value)= key
		else
			a(href= value)= key

mixin createGallery(images, active)
	each item in images
		if active == item
			img.head(src="img/"+item)
		else
			img(src="img/"+item)
mixin createContent(contents)
	each item in contents
		div.content
			img(src="img/"+item.image)
			h3=item.header
			p=item.text
mixin createItems(items)
	each item in items
		div.item
			img(src="img/"+item.image)
			h3=item.header
			p=item.text
